{
  "name": "@glost/workspace",
  "version": "0.1.0",
  "private": true,
  "description": "GLOST - Glossed Syntax Tree for language learning",
  "license": "MIT",
  "packageManager": "pnpm@9.5.0",
  "scripts": {
    "build": "pnpm -r build",
    "test": "pnpm -r test",
    "test:watch": "pnpm -r test -- --watch",
    "bench": "vitest bench",
    "bench:core": "pnpm --filter glost bench",
    "bench:plugins": "pnpm --filter glost-plugins bench",
    "lint": "pnpm -r lint",
    "typecheck": "pnpm -r typecheck",
    "clean": "pnpm -r exec rm -rf dist node_modules",
    "changeset": "changeset",
    "changeset:version": "changeset version",
    "changeset:release": "changeset publish"
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.8",
    "@types/node": "^20.0.0",
    "prettier": "^3.5.3",
    "typescript": "^5.8.3",
    "vitest": "^3.0.5"
  },
  "keywords": [
    "glost",
    "glossed-syntax-tree",
    "nlcst",
    "language-learning",
    "multilingual",
    "annotations",
    "syntax-tree"
  ]
}
