{
  "name": "glost-th-extensions-suite-example",
  "version": "0.0.1",
  "description": "Example Thai language-specific GLOST extensions demonstrating how to build extensions with glost-th (uses limited demo data)",
  "private": true,
  "type": "module",
  "main": "./src/index.ts",
  "types": "./src/index.ts",
  "exports": {
    ".": {
      "types": "./src/index.ts",
      "default": "./src/index.ts"
    },
    "./word-joiner": {
      "types": "./src/word-joiner.ts",
      "default": "./src/word-joiner.ts"
    },
    "./transcription": {
      "types": "./src/transcription.ts",
      "default": "./src/transcription.ts"
    },
    "./translation": {
      "types": "./src/translation.ts",
      "default": "./src/translation.ts"
    }
  },
  "scripts": {
    "build": "tsc --noCheck -p ./tsconfig.json",
    "typecheck": "tsc --noEmit --skipLibCheck",
    "test": "vitest --run --passWithNoTests",
    "lint": "eslint ."
  },
  "dependencies": {
    "glost": "workspace:*",
    "glost-plugins": "workspace:*",
    "glost-th": "workspace:*",
    "glost-transcription": "workspace:*",
    "glost-translation": "workspace:*",
    "glost-common": "workspace:*",
    "unist-util-visit": "^5.0.0"
  },
  "devDependencies": {
    "typescript": "catalog:",
    "vite-tsconfig-paths": "^4.3.2",
    "vitest": "catalog:"
  },
  "keywords": [
    "glost",
    "glossed",
    "extensions",
    "plugins",
    "thai",
    "transcription",
    "translation",
    "example",
    "demo"
  ]
}
