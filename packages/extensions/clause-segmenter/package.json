{
  "name": "glost-clause-segmenter",
  "version": "0.2.1",
  "description": "Clause segmentation extension for GLOST - segments sentences into clauses",
  "author": "GLOST Contributors",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/fustilio/glost.git",
    "directory": "packages/extensions/clause-segmenter"
  },
  "type": "module",
  "main": "./src/index.ts",
  "types": "./src/index.ts",
  "exports": {
    ".": {
      "types": "./src/index.ts",
      "default": "./src/index.ts"
    },
    "./rules/english": {
      "types": "./src/rules/english.ts",
      "default": "./src/rules/english.ts"
    },
    "./rules/thai": {
      "types": "./src/rules/thai.ts",
      "default": "./src/rules/thai.ts"
    },
    "./rules/universal": {
      "types": "./src/rules/universal.ts",
      "default": "./src/rules/universal.ts"
    }
  },
  "scripts": {
    "build": "tsc",
    "typecheck": "tsc --noEmit",
    "test": "vitest --passWithNoTests"
  },
  "dependencies": {
    "glost": "workspace:*",
    "glost-common": "workspace:*",
    "glost-extensions": "workspace:*",
    "unist-util-visit": "^5.0.0"
  },
  "devDependencies": {
    "typescript": "catalog:",
    "vitest": "catalog:"
  },
  "keywords": [
    "glost",
    "clause",
    "segmentation",
    "syntax",
    "linguistics"
  ]
}
