{
  "name": "glost-translation",
  "version": "0.4.0",
  "description": "Translation extension for GLOST - adds multilingual glosses",
  "author": "fustilio",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/fustilio/glost.git",
    "directory": "packages/extensions/translation"
  },
  "type": "module",
  "main": "./src/index.ts",
  "types": "./src/index.ts",
  "exports": {
    ".": {
      "types": "./src/index.ts",
      "default": "./src/index.ts"
    }
  },
  "scripts": {
    "build": "tsc",
    "typecheck": "tsc --noEmit",
    "test": "vitest --passWithNoTests"
  },
  "dependencies": {
    "glost": "workspace:*",
    "glost-common": "workspace:*",
    "glost-extensions": "workspace:*"
  },
  "devDependencies": {
    "typescript": "catalog:",
    "vitest": "catalog:"
  },
  "keywords": [
    "glost",
    "translation",
    "glosses",
    "dictionary",
    "bilingual"
  ]
}
