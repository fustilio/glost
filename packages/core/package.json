{
  "name": "glost-core",
  "version": "0.5.0",
  "description": "Core types, nodes, and utilities for GLOST (Glossed Syntax Tree)",
  "author": "fustilio",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/fustilio/glost.git",
    "directory": "packages/core"
  },
  "type": "module",
  "main": "./src/index.ts",
  "types": "./src/index.ts",
  "bin": {
    "glost": "./dist/cli/migrate.js"
  },
  "exports": {
    ".": {
      "types": "./src/index.ts",
      "default": "./src/index.ts"
    },
    "./nodes": {
      "types": "./src/nodes.ts",
      "default": "./src/nodes.ts"
    },
    "./utils": {
      "types": "./src/utils.ts",
      "default": "./src/utils.ts"
    },
    "./validators": {
      "types": "./src/validators.ts",
      "default": "./src/validators.ts"
    },
    "./guards": {
      "types": "./src/guards.ts",
      "default": "./src/guards.ts"
    }
  },
  "scripts": {
    "build": "tsc",
    "typecheck": "tsc --noEmit",
    "test": "vitest --passWithNoTests"
  },
  "dependencies": {
    "glost-common": "workspace:*",
    "unist-util-filter": "^5.0.1",
    "unist-util-find": "^3.0.0",
    "unist-util-flatmap": "^1.0.0",
    "unist-util-is": "^6.0.0",
    "unist-util-map": "^4.0.0",
    "unist-util-modify-children": "^4.0.0",
    "unist-util-remove": "^4.0.0",
    "unist-util-select": "^5.1.0",
    "unist-util-visit": "^5.0.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/nlcst": "^2.0.3",
    "typescript": "catalog:",
    "vitest": "catalog:"
  },
  "keywords": [
    "glost",
    "glossed-syntax-tree",
    "nlcst",
    "multilingual",
    "language-learning",
    "linguistics",
    "syntax-tree",
    "unist"
  ]
}
