{
  "name": "@glost/core",
  "version": "0.1.0",
  "description": "GLOST - Glossed Syntax Tree for augmenting text with language learning metadata",
  "type": "module",
  "main": "./src/index.ts",
  "types": "./src/index.ts",
  "exports": {
    ".": {
      "types": "./src/index.ts",
      "default": "./src/index.ts"
    },
    "./nodes": {
      "types": "./src/nodes.ts",
      "default": "./src/nodes.ts"
    },
    "./utils": {
      "types": "./src/utils.ts",
      "default": "./src/utils.ts"
    },
    "./validators": {
      "types": "./src/validators.ts",
      "default": "./src/validators.ts"
    },
    "./guards": {
      "types": "./src/guards.ts",
      "default": "./src/guards.ts"
    }
  },
  "scripts": {
    "build": "tsc",
    "typecheck": "tsc --noEmit",
    "test": "vitest"
  },
  "dependencies": {
    "@glost/common": "workspace:*",
    "unist-util-filter": "^5.0.1",
    "unist-util-find": "^3.0.0",
    "unist-util-flatmap": "^1.0.0",
    "unist-util-is": "^6.0.0",
    "unist-util-map": "^4.0.0",
    "unist-util-modify-children": "^4.0.0",
    "unist-util-remove": "^4.0.0",
    "unist-util-select": "^5.1.0",
    "unist-util-visit": "^5.0.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/nlcst": "^2.0.3",
    "typescript": "^5.8.3",
    "vitest": "^3.0.5"
  },
  "keywords": [
    "glost",
    "glossed-syntax-tree",
    "nlcst",
    "multilingual",
    "language-learning",
    "linguistics",
    "thai",
    "japanese",
    "chinese",
    "korean",
    "syntax-tree",
    "unist"
  ]
}
